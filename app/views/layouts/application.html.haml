!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Twitifi
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-default.navbar-fixed-top
      %div.container
        .col-md-9
          %div.collapse.navbar-collapse
            - unless user_signed_in?
              %ul.nav.navbar-nav
                %li.-with-brand
                  %a.active{ :href => '/' }
                    = image_tag 'twitif.png', size: '30x30'
                    %strong
                      = t(:home)
                %li
                  %a{ :href => '/about' }
                    %strong
                      = t(:about)
            - else
              %ul.nav.navbar-nav
                %li
                  %a.active
                    %span.glyphicon.glyphicon-home
                    %strong
                      = t(:home)
                %li
                  %a
                    %span.glyphicon.glyphicon-bell
                    %strong
                      = t(:notification)

                %li
                  %a
                    %span.glyphicon.glyphicon-envelope
                    %strong
                      = t(:messages)
        - unless user_signed_in?
          .col-md-3
            .i18n-container
              = "#{t(:language)}: "
              .btn-group
                %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                  = t(:select)
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{ :href => "#{request.env['PATH_INFO']}?locale=en" } English
                  %li
                    %a{ :href => "#{request.env['PATH_INFO']}?locale=tl" } Tagalog
                  %li
                    %a{ :href => "#{request.env['PATH_INFO']}?locale=ch" } Chtulhu
        - else
          .col-md-3.nav-user
            .col-md-4
              %a{href: profile_index_path}
                = image_tag 'https://pbs.twimg.com/profile_images/527390577411645441/-5ElXiOd_bigger.jpeg', class: 'avatar', src: "profile/index"
            .col-md-8.no-padding
              =link_to 'Sign out', sign_out_path, class: 'btn'
    %div
      = yield
