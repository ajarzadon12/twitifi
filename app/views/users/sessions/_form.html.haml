= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .field.col-md-12
    = f.email_field :email, class: "form-control", placeholder: "Email", required: "true"
  .field.col-md-9
    = f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off", required: "true"
  .actions.col-md-3.no-padding
    = f.submit "Log in", class: "btn btn-primary"
  - if devise_mapping.rememberable?
    .field.col-md-6
      %small
        = f.check_box :remember_me
        = f.label t(:remember_me)
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    .col-md-6.no-padding
      %small
        = link_to t(:forgot_password), new_password_path(resource_name)
